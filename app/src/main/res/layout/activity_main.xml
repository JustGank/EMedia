<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/start_album"
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="start_album"
        android:textSize="20dp" />

    <Button
        android:id="@+id/take_photo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="take_photo"
        android:textSize="20dp" />

    <Button
        android:id="@+id/take_video"
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="take_video_system"
        android:textSize="20dp" />

    <Button
        android:id="@+id/take_video_custom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="take_video_custom"
        android:textSize="20dp" />


    <Button
        android:id="@+id/take_file"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="take_file"
        android:textSize="20dp" />

</LinearLayout>
